{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es2018", "es2019"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "react-native": ["./node_modules/@types/react-native"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "example",
    "**/__mocks__/*", 
    "**/__tests__/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
